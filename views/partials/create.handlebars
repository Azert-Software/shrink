<form class="form-horizontal" method="POST" action="/create">
  <fieldset>
    <legend>To create a short url, simply paste and submit below</legend>
    <div class="form-group {{#if message}}has-error{{/if}}">
      <label for="url" class="col-sm-2 col-xs-12 control-label">Url</label>
      <div class="col-sm-10 col-xs-12">
        <input type="text" class="form-control" id="url" name="url" value="{{#if providedUrl}}{{providedUrl}}{{/if}}" placeholder="http://www.google.com">
        {{#if message}}<p class="text-danger">{{message}}</p>{{/if}}
      </div>
    </div>
    {{#if short}}
    <div class="form-group">
      <label for="short" class="col-sm-2 col-xs-12 control-label">Copy url:</label>
      <div class="col-sm-10 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-body">
            {{short}}
          </div>
        </div>
      </div>
    </div>
    {{/if}}
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
